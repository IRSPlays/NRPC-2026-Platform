# NRPC Platform Environment Configuration
# Copy this file to .env and update with your actual values

# Security - CHANGE THESE IN PRODUCTION!
# These are the passwords for authentication
ADMIN_PASSWORD=NRPCTeam2026
TEAM_PASSWORD=NRPC2026Teams
JUDGE_PASSWORD=NRPC2026Teams

# JWT Secret for token signing (generate a strong random string for production)
JWT_SECRET=change-me-in-production-to-a-32-character-secret-key

# Server Configuration
NODE_ENV=development
PORT=3001

# Database
DB_PATH=database.sqlite

# CORS - Comma-separated list of allowed origins
ALLOWED_ORIGINS=http://localhost:5173,http://localhost:3000

# Google Drive Backup (Optional)
# GOOGLE_CLIENT_ID=your-client-id
# GOOGLE_CLIENT_SECRET=your-client-secret
# GOOGLE_REDIRECT_URI=your-redirect-uri

# Base URL for sitemap generation
BASE_URL=https://nrpc-platform.app